    %a.simple-text{:href => '/'}
      MuSync AdminPanel
  .sidebar-wrapper
    %ul.nav
      %li{ class: active('admin/dashboard') }
        %a{ href: '/'}
          %i.ti-dashboard
          %p Dashboard
      %li{ class: active('admin/users') }
