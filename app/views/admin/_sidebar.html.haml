          = "<i class='nc-icon nc-single-02'></i>".html_safe
          %p Users    

      %li{ class: active('admin/user_follow_requests') }
        = link_to admin_user_follow_requests_path do
          = "<i class='nc-icon nc-diamond'></i>".html_safe
          %p Follow Requests   
        

